<% if run.won? %>
  <div class="banner banner-win">
    <div class="banner-title">Victory</div>
    <div class="banner-text">You reached <strong><%= run.resources["power"] %></strong> Power.</div>
    <div class="banner-actions">
      <%= button_to "Start New Run", runs_path, method: :post, class: "btn btn-primary" %>
    </div>
  </div>
<% elsif run.lost? %>
  <div class="banner banner-lose">
    <div class="banner-title">Defeat</div>
    <div class="banner-text">Threat reached <strong><%= run.state.fetch("threat", 0) %></strong>.</div>
    <div class="banner-actions">
      <%= button_to "Start New Run", runs_path, method: :post, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
