<h2>Run <%= @run.id %></h2>

<% if notice %>
  <div style="padding:8px; background:#e8f5e9; border:1px solid #c8e6c9; margin-bottom:10px;">
    <%= notice %>
  </div>
<% end %>

<% if alert %>
  <div style="padding:8px; background:#ffebee; border:1px solid #ffcdd2; margin-bottom:10px;">
    <%= alert %>
  </div>
<% end %>

<%= render "status_banner", run: @run %>
<%= render "hud", run: @run %>
<%= render "cast_panel", run: @run %>
<%= render "hex_grid", run: @run, hexes: @hexes, presenter: @presenter %>
